{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "_type": {
            "type": "string",
            "const": "https://in-toto.io/Statement/v1"
        },
        "subject": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "digest": {
                        "type": "object",
                        "properties": {
                            "sha256": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "sha256"
                        ]
                    }
                },
                "required": [
                    "name",
                    "digest"
                ]
            }
        },
        "predicateType": {
            "type": "string",
            "const": "https://slsa.dev/provenance/v1"
        },
        "predicate": {
            "type": "object",
            "properties": {
                "buildDefinition": {
                    "type": "object",
                    "properties": {
                        "buildType": {
                            "type": "string"
                        },
                        "externalParameters": {
                            "type": "object",
                            "properties": {
                                "workflow": {
                                    "type": "object",
                                    "properties": {
                                        "ref": {
                                            "type": "string"
                                        },
                                        "repository": {
                                            "type": "string",
                                            "format": "uri"
                                        },
                                        "path": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "ref",
                                        "repository",
                                        "path"
                                    ]
                                }
                            },
                            "required": [
                                "workflow"
                            ]
                        },
                        "internalParameters": {
                            "type": "object",
                            "properties": {
                                "github": {
                                    "type": "object",
                                    "properties": {
                                        "event_name": {
                                            "type": "string"
                                        },
                                        "repository_id": {
                                            "type": "string"
                                        },
                                        "repository_owner_id": {
                                            "type": "string"
                                        },
                                        "runner_environment": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "event_name",
                                        "repository_id",
                                        "repository_owner_id",
                                        "runner_environment"
                                    ]
                                }
                            },
                            "required": [
                                "github"
                            ]
                        },
                        "resolvedDependencies": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "uri": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "digest": {
                                        "type": "object",
                                        "properties": {
                                            "gitCommit": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "gitCommit"
                                        ]
                                    }
                                },
                                "required": [
                                    "uri",
                                    "digest"
                                ]
                            }
                        }
                    },
                    "required": [
                        "buildType",
                        "externalParameters",
                        "internalParameters",
                        "resolvedDependencies"
                    ]
                },
                "runDetails": {
                    "type": "object",
                    "properties": {
                        "builder": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "format": "uri"
                                }
                            },
                            "required": [
                                "id"
                            ]
                        },
                        "metadata": {
                            "type": "object",
                            "properties": {
                                "invocationId": {
                                    "type": "string",
                                    "format": "uri"
                                }
                            },
                            "required": [
                                "invocationId"
                            ]
                        }
                    },
                    "required": [
                        "builder",
                        "metadata"
                    ]
                }
            },
            "required": [
                "buildDefinition",
                "runDetails"
            ]
        }
    },
    "required": [
        "_type",
        "subject",
        "predicateType",
        "predicate"
    ]
}